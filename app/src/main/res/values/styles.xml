<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonBase" parent="TextAppearance.AppCompat">
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/calc_button_text</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginHorizontal">1dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ButtonOperation" parent="ButtonBase">
        <item name="android:background">@drawable/calc_operation_shape</item>
    </style>

    <style name="ButtonDigit" parent="ButtonBase">
        <item name="android:background">@drawable/calc_digit_shape</item>
    </style>

    <style name="ButtonEquals" parent="ButtonBase">
        <item name="android:background">@drawable/calc_equals_shape</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Background">
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/calc_button_text</item>
        <item name="android:background">@drawable/calc_operation_shape</item>
    </style>



    <style name="TileBase" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Tile0" parent="TileBase">
        <item name="android:background">@color/game_bg_0</item>
